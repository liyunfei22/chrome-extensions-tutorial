{
  "name": "hello extension",
  "description": "this is demos from docs",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "hello_extensions.png",
    "default_title": "学习chrome extension 演示demo",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "hello_extensions.png",
    "32": "hello_extensions.png",
    "48": "hello_extensions.png",
    "128": "hello_extensions.png"
  },
  "content_scripts":[ {
    "matches": ["<all_urls>"],
    "exclude_matches": ["*://127.0.0.1/*", "*://localhost/*", "*://dev.djtest.cn/*"],
     "css": ["content/index.css"],
     "js": ["content/index.js"]
  }],
  "omnibox": {
    "keyword": "hw"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "MacCtrl+Shift+H"
      },
      "description": "open hello.html"
    }
  },
  "permissions": [
    "contextMenus",
    "bookmarks",
    "alarms",
    "notifications",
    "activeTab",
    "scripting",
    "storage"
  ]
}